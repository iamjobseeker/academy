package operator;

import java.util.Scanner;

public class OperatorQuiz {

	public static void main(String[] args) {
		
		Scanner exam=new Scanner(System.in);
		
		double kor;
		double eng;
		double mat;
		
		System.out.println("Korean score: ");
		kor=exam.nextDouble();

		System.out.println("English score: ");
		eng=exam.nextDouble();
		
		System.out.println("Math score: ");
		mat=exam.nextDouble();
		
		System.out.println("Korean: " + kor + ", English: " + eng + 
				", Math: " + mat);
		System.out.println("total: " + (kor+eng+mat));
		System.out.println("average: " + (kor+eng+mat)/3 );
		
	}

}
